<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace 写的就是你要实现的那个接口的路径-->
<!--1.sql语句     2.绑定接口-->
<mapper namespace="com.aaa.doctor.dao.RegistrationDao">


    <select id="selectSum" resultType="com.aaa.core.entity.Registration">
        SELECT user_id,doctor_name,SUM(registration_amount) sum,COUNT(*) count FROM his_registration
        <if test="doctorName!='' and doctorName!=null or dateRange1 !='' and dateRange1 !=null ">
            where
        </if>
        <if test="doctorName!='' and doctorName!=null">
            doctor_name like concat('%',#{doctorName},'%')
        </if>
        <if test="doctorName!='' and doctorName!=null and dateRange1 !='' and dateRange1 !=null ">
            and
        </if>
        <if test="dateRange1 !='' and dateRange1 !=null">
            create_time between #{dateRange1} and #{dateRange2}
        </if>
        GROUP BY user_id,doctor_name
    </select>

    <select id="getRegNumber" resultType="java.lang.Integer">
        SELECT MAX(registration_number) numberMax FROM his_registration WHERE dept_id=#{deptId}
    </select>

</mapper>