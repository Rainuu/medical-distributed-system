<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.check.dao.CareOrderItemDao">

    <resultMap type="com.aaa.core.entity.CareOrderItem" id="HisCareOrderItemMap">
        <result property="itemId" column="item_id"/>
        <result property="coId" column="co_id" />
        <result property="itemRefId" column="item_ref_id" />
        <result property="itemName" column="item_name" />
        <result property="itemType" column="item_type" />
        <result property="num" column="num" />
        <result property="price" column="price" />
        <result property="amount" column="amount" />
        <result property="remark" column="remark" />
        <result property="status" column="status" />
        <result property="createTime" column="create_time" />
    </resultMap>

    <select id="selectAll" resultMap="HisCareOrderItemMap">
        select o.item_id,o.item_name,o.num,o.price,o.amount,o.remark,o.status from his_care_order_item o,his_check_result c
        where o.item_id=c.coc_id and o.status=1
            <if test="checkItemIds != null and checkItemIds.size > 0">
                and c.check_item_id in
                <foreach collection="checkItemIds" item="checkItemId" open="(" separator="," close=")">
                    #{checkItemId}
                </foreach>
            </if>
    </select>
</mapper>
