<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.check.dao.CheckResultDao">

    <resultMap type="com.aaa.core.entity.CheckResult" id="HisCheckResultMap">
        <result property="cocId" column="coc_id" />
        <result property="checkItemId" column="check_item_id" />
        <result property="checkItemName" column="check_item_name" />
        <result property="price" column="price" />
        <result property="regId" column="reg_id" />
        <result property="resultMsg" column="result_msg" />
        <result property="resultImg" column="result_img" />
        <result property="patientId" column="patient_id" />
        <result property="patientName" column="patient_name" />
        <result property="resultStatus" column="result_status" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
        <result property="createBy" column="create_by" />
        <result property="updateBy" column="update_by" />
    </resultMap>

    <select id="selectAll" resultMap="HisCheckResultMap">
        SELECT * FROM his_check_result where result_status=#{param2.status}
            <if test="checkItemVo.checkItemIds != null and checkItemVo.checkItemIds.size > 0">
                 and check_item_id in
                <foreach collection="checkItemVo.checkItemIds" item="checkItemId" open="(" separator="," close=")">
                    #{checkItemId}
                </foreach>
            </if>
            <if test="checkItemVo.regId !='' and checkItemVo.regId!=null">
                and reg_id=#{param2.regId,jdbcType=VARCHAR}
            </if>
            <if test="checkItemVo.patientName !='' and checkItemVo.patientName!=null">
                and patient_name like concat('%',#{param2.patientName,jdbcType=VARCHAR},'%')
            </if>
    </select>

    <delete id="addMsg">
        update his_check_result set result_msg = #{param2,jdbcType=VARCHAR},result_img = #{param3},
                                    result_status = 1 where coc_id = #{param1,jdbcType=VARCHAR}
    </delete>

    <select id="selectAllTwo" resultMap="HisCheckResultMap">
        SELECT check_item_id,check_item_name,SUM(price) sum,COUNT(*) count FROM his_check_result
            <if test="checkItemId!='' and checkItemId!=null or dateRange !='' and dateRange > 0">
                where
            </if>
            <if test="checkItemId!='' and checkItemId!=null">
                check_item_id=#{param1,jdbcType=VARCHAR}
            </if>
            <if test="checkItemId!='' and checkItemId!=null and dateRange !='' and dateRange > 0">
                and
            </if>
            <if test="dateRange !='' and dateRange > 0">
                create_time between #{dateRange[0]} and #{dateRange[1]};
            </if>
      GROUP BY check_item_id,check_item_name
    </select>
</mapper>
